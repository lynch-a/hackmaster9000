<div id="accordion">
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">
        <button class="btn btn-link" id="<%= tool_name%>-help-heading" data-toggle="collapse" data-target="#<%= tool_name %>-help" aria-expanded="false" aria-controls="<%= tool_name %>-help">
          xtrm-scraper Help
        </button>
      </h5>
    </div>

    <div id="<%= tool_name %>-help" class="collapse" data-toggle="collapse" aria-labelledby="<%= tool_name %>-help-heading" data-parent="#accordion">
      <div class="card-body bg-light">
        <pre style="margin-bottom:0;">Xtreme-scraper is a custom tool to scrape the first X pages of the http://www.xtremetop100.com private server toplist site.

Set the output name to "raw-domain-ip-sometarget.txt" and all of the domains and IP's that were discovered will be updated in the interface.</pre>
      </div>
    </div>
  </div>
</div>
<hr>

<div class="container no-gutters">
  <form id="<%= tool_name %>-options">
    <div class="row">
      
      <div class='col-sm-6'>
        <%= erb :'tools/tool_helpers/_text_input', locals: {
                  tool_name: tool_name,
                  label: "Output Name",
                  field_name: "output",
                  field_value: "raw-domain-ip-xtrm.txt",
                  placeholder: ""
                }
        %>
      </div>

      <div class='col-sm-6'>
        <%= erb :'tools/tool_helpers/_text_input', locals: {
                  tool_name: tool_name,
                  label: "Pages to Scrape",
                  field_name: "pages",
                  field_value: "1",
                  placeholder: ""
                }
        %>
      </div>
    </div>
  </form>
  <hr/>
  <%= erb :'partials/_tool_runner', layout: false, locals: {tool_name: "xtreme-scraper"} %>
</div>
